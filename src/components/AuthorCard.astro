---
import AvatarImage from "@/components/AvatarImage.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">; // Define the prop type for the author entry
}

const { author } = Astro.props;
const { name, avatar, role, bio, social } = author.data;
---

<div
  class="flex flex-col items-center text-center p-6 rounded-lg hover:shadow-lg transition-shadow duration-300 w-full mx-auto bg-gray-900"
>
  <AvatarImage src={avatar} alt={name} size="lg" loading="lazy" />
  <!-- Name -->
  <h3 class="mt-4 text-xl font-semibold text-white">{name}</h3>

  <!-- Rol -->
  <span class="mt-2 text-sm text-gray-500">{role}</span>
  <!-- Redes sociales -->
  <div class="mt-2 flex space-x-4">
    <SocialLinks social={social} useFullUrl={false} />
  </div>
  <div class="mt-5 text-white w-full flex-col">
    <h3 class="text-xl font-semibold text-start">Bio</h3>
    <p class="mt-2 text-gray-400">{bio}</p>
    {/* Buttón leer más */}
    <div class="flex justify-end mt-4">
      <!-- Using variants white for link -->
      <a
        href={`/blog/${author.id}`}
        class="text-base font-semibold leading-7 text-gray-300 hover:text-gray-100"
      >
        Leer más
        <Icon name="lucide:arrow-right" class="ml-1 inline h-5 w-5" />
      </a>
    </div>
  </div>
</div>

