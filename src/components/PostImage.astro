---
import { Image } from "astro:assets";

interface Props {
  src?: ImageMetadata | null;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  quality?: "low" | "mid" | "high" | number;
  loading?: "lazy" | "eager";
}

const {
  src,
  alt,
  class: className,
  width = 800,
  height = 450,
  quality,
  loading = "lazy",
} = Astro.props;
---

{
  src ? (
    <Image
      src={src}
      alt={alt}
      class={className}
      width={width}
      height={height}
      quality={quality}
      loading={loading}
    />
  ) : (
    <img
      src="/assets/images/placeholder.jpg"
      alt={alt}
      class={className}
      width={width}
      height={height}
      loading={loading}
    />
  )
}

