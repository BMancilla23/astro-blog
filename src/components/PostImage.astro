---
import { Image } from "astro:assets";

interface Props {
  src?: ImageMetadata | null;
  alt: string;
  fallback?: string;
  className?: string;
  width?: number;
  height?: number;
  quality?: "low" | "mid" | "high" | number;
  loading?: "lazy" | "eager";
}

const {
  src,
  alt,
  className,
  width = 800,
  height = 450,
  quality,
  loading = "lazy",
  fallback = "/assets/images/placeholder.jpg",
} = Astro.props;
---

{
  src ? (
    <Image
      src={src}
      alt={alt}
      class={className}
      width={width}
      height={height}
      quality={quality}
      loading={loading}
    />
  ) : (
    <img
      src={fallback}
      alt={alt}
      class={className}
      width={width}
      height={height}
      loading={loading}
    />
  )
}

