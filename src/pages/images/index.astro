---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image, Picture } from "astro:assets";

import post05Img from "@/images/post-05.png";
---

<MainLayout title="Imágenes">
  <h1 class="text-3xl text-white">Imágenes</h1>

  <img
    loading="eager"
    src="assets/images/post-05.png"
    class="w-[250px] h-[250px]"
    alt="image post-05"
    width="250"
    height="250"
  />

  <h1>Formatos</h1>
  <Image src={post05Img} alt="image post-05" width="250" height="250" />

  <h1>Picture</h1>
  <Picture
    formats={["webp", "avif", "jpeg", "png"]}
    widths={[240, 540, 720, post05Img.width] as const}
    sizes={"(max-width: 360px) 240px , (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px"}
    src={post05Img}
    width="250"
    height="250"
    alt="image post-05"
  />

  <div
    style={{
      height: "1000px",
    }}
  >
  </div>

  <img
    loading="lazy"
    src="assets/images/post-01.png"
    height="250"
    width="250"
    alt="image post-01"
  />
</MainLayout>

